{% extends 'base.html.twig' %}
{% block title %}Change Password{% endblock %}

{% block body %}
    <div class="container">

    <h1>Change Password</h1>
    <form method="post" action="">
        <p>Ancien mot de passe</p>
        <input type="password" id="old_password" name="old_password" required="required" maxlength="30" class="form-control">
        <p>Nouveau mot de passe</p>
        <input type="password" id="new_password" name="new_password" required="required" maxlength="30" class="form-control">
        <button class="btn" type="submit" value="Change Password">Change Password</button>
    </form>
    <a href="{{ path('profile') }}">back to list</a>


</div>
{% endblock %}
