{% extends 'adminbase.html.twig' %}
{% block title %}Mount{% endblock %}

{% block body %}
<div class="content">
    <main>
    <h1>Mount</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mount.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mount.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ mount.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mount.description }}</td>
            </tr>
            <tr>
                <th>Faction</th>
                <td>{{ mount.faction }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ mount.type }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ mount.currency }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ mount.source }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mount_index') }}">back to list</a>

    <a href="{{ path('mount_edit', {'id': mount.id}) }}">edit</a>

    {{ include('admin/mount/_delete_form.html.twig') }}
    </main>
</div>
{% endblock %}
