{% extends 'adminbase.html.twig' %}
{% block title %}Mount index{% endblock %}

{% block body %}
<div class="content">
    <main>
    <h1>Mount index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>Faction</th>
                <th>Type</th>
                <th>Currency</th>
                <th>Source</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mount in mounts %}
            <tr>
                <td>{{ mount.id }}</td>
                <td>{{ mount.name }}</td>
                <td>{{ mount.image }}</td>
                <td>{{ mount.description }}</td>
                <td>{{ mount.faction }}</td>
                <td>{{ mount.type }}</td>
                <td>{{ mount.currency }}</td>
                <td>{{ mount.source }}</td>
                <td>
                    <a href="{{ path('mount_show', {'id': mount.id}) }}">show</a>
                    <a href="{{ path('mount_edit', {'id': mount.id}) }}">edit</a>
                    {{ include('admin/mount/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mount_new') }}">Create new</a>
    </main>
</div>
{% endblock %}
